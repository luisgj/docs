{
  "$schema": "https://mintlify.com/docs.json",
  "theme": "mint",
  "name": "Bando Developer Docs",
  "colors": {
    "primary": "#54c4a5",
    "light": "#54c4a5",
    "dark": "#54c4a5"
  },
  "favicon": "/favicon.png",
  "fonts": {
    "heading": {
      "family": "Kanit",
      "weight": 400
    },
    "body": {
      "family": "Inter",
      "weight": 400
    }
  },
  "navigation": {
    "tabs": [
      {
        "tab": "Home",
        "groups": [
          {
            "group": "Getting started",
            "pages": [
              "index",
              "quickstart"
            ]
          },
          {
            "group": "Customization",
            "pages": [
              "essentials/settings",
              "essentials/navigation"
            ]
          },
          {
            "group": "Writing content",
            "pages": [
              "essentials/markdown",
              "essentials/code",
              "essentials/images",
              "essentials/reusable-snippets"
            ]
          },
          {
            "group": "AI tools",
            "pages": [
              "ai-tools/cursor",
              "ai-tools/claude-code",
              "ai-tools/windsurf"
            ]
          }
        ]
      },
      {
        "tab": "API reference",
        "openapi": "https://apidev.bando.cool/v1/openapi.json"
      }
    ]
  },
  "logo": {
    "light": "/logo/light.png",
    "dark": "/logo/dark.svg"
  },
  "navbar": {
    "links": [
      {
        "label": "Support",
        "href": "mailto:support@bando.cool"
      }
    ],
    "primary": {
      "type": "button",
      "label": "Request API Key",
      "href": "mailto:api@bando.cool"
    }
  },
  "contextual": {
    "options": [
      "copy",
      "view",
      "chatgpt",
      "claude",
      "perplexity",
      "mcp",
      "cursor",
      "vscode"
    ]
  },
  "footer": {
    "socials": {
      "x": "https://x.com/bandocool",
      "github": "https://github.com/bandohq",
      "linkedin": "https://linkedin.com/company/bandocool"
    }
  }
}